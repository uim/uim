(assert-error  (tn) (lambda ()    (f #t . #t)))
(assert-equal? (tn) '(#t #t ())   (f #t #t))
(assert-error  (tn) (lambda ()    (f #t #t . #t)))
(assert-equal? (tn) '(#t #t (#t)) (f #t #t #t))
(assert-error  (tn) (lambda ()    (f #t #t #t . #t)))

