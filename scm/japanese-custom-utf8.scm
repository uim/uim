(define string-to-list
  (lambda (s)
    (with-char-codec "UTF-8"
      (lambda ()
	(map! (lambda (c)
		(let ((str (list->string (list c))))
		  (with-char-codec "ISO-8859-1"
		    (lambda ()
		      (%%string-reconstruct! str)))))
	      (reverse! (string->list s)))))))

